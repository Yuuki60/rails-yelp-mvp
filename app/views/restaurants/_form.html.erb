<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: %w[chinese italian japanese french belgian], label_method: lambda { |lang| lang.capitalize } %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
<hr>
  <%= link_to 'Back to Restaurants List', restaurants_path, class: 'btn btn-secondary'%>
