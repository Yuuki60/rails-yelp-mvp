<div class="container mt-4">
  <h1>Restaurants</h1>

  <hr>

  <div class="list-group">
    <% @restaurants.each do |restaurant| %>
      <a href="<%= restaurant_path(restaurant) %>" class="list-group-item list-group-item-action">
        <div class="d-flex justify-content-start align-items-center">
          <span class="badge bg-primary me-3 rounded-pill"><%= restaurant.category.capitalize %></span>
          <h4 class="mb-0"><%= restaurant.name %></h4>
        </div>
      </a>
    <% end %>
  </div>

  <hr>

  <%= link_to 'Add New Restaurant', new_restaurant_path, class: 'btn btn-primary mt-3' %>
</div>
