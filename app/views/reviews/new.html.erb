<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <h1>Add Review for <%= @restaurant.name %></h1>

      <%= simple_form_for [@restaurant, @review], html: { class: "form" } do |f| %>
        <div class="form-group">
          <%= f.input :content, label: "Review Content", class: "form-control", placeholder: "Enter your review here" %>
        </div>
        <div class="form-group">
          <%= f.input :rating, collection: 0..5, label: "Rating", class: "form-control" %>
        </div>
        <%= f.submit "Submit Review", class: "btn btn-primary btn-block mt-4" %>
      <% end %>

      <hr>

      <%= link_to 'Back to Restaurant', restaurant_path(@restaurant) , class: 'btn btn-secondary btn-block mt-2' %>
    </div>
  </div>
</div>
